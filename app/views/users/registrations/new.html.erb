<html class="log-in-color">
<h2 class="log_in">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form_login' %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form_login' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form_login' %>
  </div>

<div class="submit_log_in">
  <div class="actions">
    <%= f.submit "Sign up", class: 'form_action' %>
  </div>
</div>
<% end %>

<div class="link_sign_up">
<%= render "users/shared/links" %>
</div>
</html>

<style type="text/css">
body {
  color: #5e5e5e;
  font: 400 87.5%/1.5em 'Open Sans', sans-serif;
}

.log_in {
    margin-bottom: 40px;
}

.log-in-color{
    width: 100%;
    height:100%;
    background-color:#f0f0f0;
}

.submit_log_in{
    margin: 20px 30px;
}

.link_sign_up{
    margin: 20px;
}

</style>