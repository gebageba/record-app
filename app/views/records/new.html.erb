<%= render partial: "shared/header", locals: { title: @title }%>

<%# 入力欄 %>
<div class="column right">

    <div style="color:#ff0000;padding-top:10px;margin-bottom:10px;">
    <button class="form_action" type="button", style="margin-top:50px" >
    <%= link_to "表出力", new_record_path(@records, @records_income, format: :xlsx),:style => "color: black;"%>
    </button>
    </div>
    
    
        <p id="notice"><%= notice %></p>
        <br>

    <h2 style="margin-left:5%;">収入</h2>
    <div class="main-wrap">
        <table class="main">
          <thead>
            <tr>
              <th>Date</th>
              <th>Memo</th>
              <th>Subject</th>
              <th>Price</th>
              <th colspan="3"></th>
            </tr>
          </thead>
    </div>

          <tbody>
            <% @records_income.each do |record| %>
              <tr>
                <td><%= record.date %></td>
                <td id="a"><%= record.memo %></td>
                <td><%= record.subject.name %></td>
                <td><%= record.price %></td>
                <td><%= link_to '詳細', record %></td>
                <td><%= link_to '編集', edit_record_path(record) %></td>
                <td><%= link_to '削除', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
</div>

        
      <h2 style="margin-left:5%;">支出</h2>
      <div class="main-wrap">
        <table class="main">
          <thead>
            <tr>
              <th>Date</th>
              <th>Memo</th>
              <th>Subject</th>
              <th>Price</th>
              <th colspan="3"></th>
            </tr>
          </thead>

    
          <tbody>
            <% @records.each do |record| %>
              <tr>
                <td><%= record.date %></td>
                <td class="a"><%= record.memo %></td>
                <td><%= record.subject.name %></td>
                <td><%= record.price %></td>
                <td><%= link_to '詳細', record %></td>
                <td><%= link_to '編集', edit_record_path(record) %></td>
                <td><%= link_to '削除', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="main-wrap-form">
          <%# <%= render 'form', record: @record %>  %>
      </div>
    </div>
</div>

<%# 科目説明 %>
<footer>
    <div style="background-color:#E0FFFF;">
        <h1>勘定科目(支出)</h1>
        <br>
          <%# <%= render partial: "shared/explain_expense"%> %>
        <br>
    </div>
    <div style="background-color:#CCFFCC;">
        <h1>勘定科目(収入)</h1>
        <br>
          <%# <%= render partial: "shared/explain_income"%> %>
    </div>

</footer>



