<%# 収入科目説明 %>
<div class="whole_item">
<section class="item_con">
    <h3>1.売上</h3>
        <div class="item_box"> <%=image_tag 'income/1-1.png'%>
            <div class="mask">
                <div class="caption">
                  例:webサイトを作ったのでお金を受け取った
                </div>
            </div>
        </div>
</section>
<section class="item_con">
    <h3>2.事業主借</h3>
        <div class="item_box"> <%=image_tag 'income/1-2.png'%>
            <div class="mask">
                <div class="caption">
                  現金にマイナスが出た時に使ってください
                </div>
            </div>
        </div>
</section>
<section class="item_con">
    <h3>3.元入金</h3>
        <div class="item_box"> <%=image_tag 'income/1-3.png'%>
            <div class="mask">
                <div class="caption">
                  資本金と同じ部類
                </div>
            </div>
        </div>
</section>
</div>

<style type="text/css">
.whole_item{
    display: flex;
    flex-wrap: wrap;
}
.item_con {
    overflow: hidden;
}
.item_box {
    float: left;
    width: 80%;
    margin: 5%;
    padding: 0;
    overflow:        hidden;
    position:        relative;    /* 相対位置指定 */
    overflow:hidden;
}
.item_box img {
    width: 100%;
    height: auto;
    display: block;
    transition: 0.6s;
}
.item_box:hover {
    transform:scale(1.1,1.1);
}

/*マスク*/
.item_box .mask {
    width:            100%;
    height:            100%;
    position:        absolute;    /* 絶対位置指定 */
    top:            0;
    left:            0;
    opacity:        0;    /* マスクを表示しない */
    background-color:    rgba(0,0,0,0.7);    /* マスクは半透明 */
    transition:        all 0.6s ease;
}

.item_box:hover .mask {
    opacity:        1;    /* マスクを表示する */
}
/*文字列BOX*/
.item_box .caption {
    color:            #fff;
    font-size:        1%;
    line-height:normal;
    text-align:center;
    position: absolute;
    top: 50%; /*親要素を起点に上から50%*/
    left: 50%;  /*親要素を起点に左から50%*/
    transform: translateY(-50%) translateX(-50%); /*要素の大きさの半分ずつを戻す*/
}

</style>